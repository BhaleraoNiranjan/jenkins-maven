pipeline {
    environment { 

        registry = "devopshint/my-app-1.0" 

        registryCredential = 'devopshint' 

    }

    agent any
    stages {
        stage('Cloning our Git') { 

            steps { 

                git 'https://github.com/devopshint/jenkins-maven.git' 

            }

        } 
     stage('Building our image') { 

            steps { 

                script { 

                    dockerImage = docker.build registry + ":$BUILD_NUMBER" 

                }

            } 
        }

     }
     
}
